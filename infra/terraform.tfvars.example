# Example Terraform Variables
# Copy this file to terraform.tfvars and fill in your values
# DO NOT commit terraform.tfvars to version control

# Project Configuration
project = "cloud-cost-calculator"
env     = "production"
region  = "us-west-2"

# IAM Configuration (REQUIRED)
# Name of the Lambda execution role you created manually in AWS Console
lambda_role_name = "lambda-execution-role"

# S3 Configuration (Optional)
# Leave empty to auto-generate bucket name
report_bucket_name = ""

# Notification Configuration (Optional)
notification_email = "alerts@example.com"

# Telegram Configuration (Optional)
# Get bot token from @BotFather on Telegram
# Get chat ID from @userinfobot on Telegram
telegram_bot_token = ""
telegram_chat_id   = ""

# Lambda Artifact Paths (Optional - defaults are fine)
# collector_zip_path  = "artifacts/collector.zip"
# weekly_zip_path     = "artifacts/weekly_report.zip"
# telegram_zip_path   = "artifacts/telegram_notifier.zip"
